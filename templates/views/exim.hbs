<!DOCTYPE html>
<!--=== Coding by CodingLab | www.codinglabweb.com === -->
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Regisration - SriSriPort</title>
    <!--======== CSS ======== -->


    <!--===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <link rel="shortcut icon" href="images/flogo.png" type="image/x-icon">

    <link rel="stylesheet" type="text/css" href="css/exim.css">
    <link rel="stylesheet" type="text/css" href="css/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <script src="https://kit.fontawesome.com/b7063610fd.js" crossorigin="anonymous"></script>

    <!--<title>Responsive Regisration Form </title>-->
</head>

<body>
    {{!-- {{>header}} --}}
    {{>navbar}}
    <div class="container">
        <header>Registration</header>

        <form action="/eximreg" method="post">
            <div class="form first">
                <div class="details personal">
                    <span class="title">Personal Details</span>
                    <div class="fields">
                        {{>country}}
                        <div class="input-field">
                            <label>Trade Role<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <select name="tradeRole" required>
                                <option value="">Please select trade role</option>
                                <option value="Import">Import</option>
                                <option value="Export">Export</option>
                                <option value="Buyer">Buyer</option>
                                <option value="Seller">Seller</option>
                            </select>
                        </div>
                        <div class="input-field">
                            <label>Email<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="text" name="email" placeholder="Enter your email" required>
                        </div>
                        <div class="input-field">
                            <label>Full Name<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="text" name="fname" placeholder="Enter your name" required>
                        </div>

                        <div class="input-field">
                            <label>Date of Birth<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="date" name="dob" placeholder="Enter birth date">
                        </div>

                        <div class="input-field">
                            <label>Mobile Number<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="text" name="mobileNumber" placeholder="Enter mobile number" required>
                        </div>
                    </div>
                </div>

                <div class="details ID">
                    <span class="title">Identity Details<span
                            style="color: red !important; display: inline;  float: none;">*</span></span>

                    <div class="fields">

                        <div class="input-field">
                            <label>ID Type<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <select name="idType">
                                <option value="">Select the ID you have</option>
                                <option value="PAN">PAN</option>
                                <option value="Adhaar">Adhaar</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>

                        <div class="input-field">
                            <label>ID Number<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="text" name="idNumber" placeholder="Enter ID number">
                        </div>


                        <div class="input-field">
                            <label>Issued Country<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="text" name="issuedCountry" placeholder="Enter issued country">
                        </div>
                        <div class="input-field">
                            <label>Job Title<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="text" name="jobTitle" placeholder="Enter Job Title">
                        </div>

                    </div>

                    <button class="nextBtn">
                        <span class="btnText">Next</span>
                        <i class="uil uil-navigator"></i>
                    </button>
                </div>
            </div>

            <div class="form second">
                <div class="details address">
                    <span class="title">Company Details</span>
                    <div class="fields">
                        <div class="input-field">
                            <label>Company Name<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="text" name="companyName" placeholder="Enter the name of the Company" required>
                        </div>

                        <div class="input-field">
                            <label>Company Type<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <select name="companyType" required>
                                <option value="">Choose Company Type</option>
                                <option value="Indivisual Proprietor">Indivisual Proprietor</option>
                                <option value="Public Limited">Public Limited</option>
                                <option value="Private Limited">Private Limited</option>
                                <option value="Limited Liability Parternship">Limited Liability Parternship</option>
                            </select>
                        </div>

                        <div class="input-field">
                            <label>Address<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="text" name="address" placeholder="Enter Your Address">

                        </div>

                        <div class="input-field">
                            <label>State</label>
                            <input type="text" name="state" placeholder="Enter your State">
                        </div>

                        <div class="input-field">
                            <label>City</label>
                            <input type="text" name="city" placeholder="Enter Your City">
                        </div>

                        <div class="input-field">
                            <label>Pin Code<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="number" name="pincode" placeholder="Enter Pin Code" required>

                        </div>

                        <div class="input-field">
                            <label>Contact Number<span
                                    style="color: red !important; display: inline;  float: none;">*</span></label>
                            <input type="text" name="companyNumber" placeholder="Enter Your Number" required>

                        </div>

                        <div class="input-field">
                            <label>Landline Number:</label>
                            <input type="text" name="Landline" placeholder="Enter Your Landline Number(Optional)">

                        </div>

                    </div>
                </div>

                <div class="details family">

                    <div class="buttons">
                        <div class="backBtn">
                            <i class="uil uil-navigator"></i>
                            <span class="btnText">Back</span>
                        </div>

                        <button type="submit" class="sumbit">
                            <span class="btnText">Submit</span>
                            <i class="uil uil-navigator"></i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script>
        const form = document.querySelector("form"),
            nextBtn = form.querySelector(".nextBtn"),
            backBtn = form.querySelector(".backBtn"),
            allInput = form.querySelectorAll(".first input");


        nextBtn.addEventListener("click", () => {
            allInput.forEach(input => {
                if (input.value != "") {
                    form.classList.add('secActive');
                } else {
                    form.classList.remove('secActive');
                }
            })
        })

        backBtn.addEventListener("click", () => form.classList.remove('secActive'));

    </script>
    <!--<script src="script.js"></script>-->
    {{!-- {{>foot1}} --}}
</body>

</html>