<body>
    {{>pheader}}
    {{>header}}
    <section id="homecontact">
    </section>
    <div class="container">
        <h1>Contact SRISRIPORT</h1>
        <p>Please fill in this form to contact us.</p>
        <hr>
        <div class="box">
            <form action="/register" method="post">
                <div class="container">

                    <label for="fname"><b></b></label>
                    <input type="text" placeholder="Enter your first name" name="fname" required>

                    <label for="lname"><b></b></label>
                    <input type="text" placeholder="Enter your last name" name="lname" required>

                    <label for="email"><b></b></label>
                    <input type="email" placeholder="Enter your Email" name="email" required>
                    <label for="mobile"><b></b></label>
                    <input type="number" placeholder="Enter mobile number" name="mobile" required>


                    <label for="msg1"><b></b></label>
                    <input type="text" placeholder="Enter your message" name="msg1" required>

                    <label for="msg2"><b></b></label>
                    <input type="text" placeholder="your feedback" name="msg2" required>

                    {{!-- <label>
                        <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
                    </label> --}}

                    <p>We will contact you soon <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

                    <div class="clearfix">

                        <button class="btn" type="submit" class="signupbtn">Send</button>
                    </div>
                </div>
            </form>
        </div>

        {{>foot1}}

</body>

