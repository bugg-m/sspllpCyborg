<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>SriSriPort-MaeketPlace</title>
    <link rel="shortcut icon" href="images/flogo.png" type="image/x-icon">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/product.css" />
  </head>

  <body>
    
    <%- include('../partials/navbar'); -%>
    <div class="cont d-flex container-sm my-5 mx-3">
      <% records.forEach(function(row,ind){ %>
      <div class="card my-3 mx-3" style="width: 18rem">
        <li><span class="badge bg-danger">New</span></li>
        <!-- <span class="badge rounded-pill text-bg-info">New</span> -->
        <img src="uploads/<%= row.imgs %>" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title"><%= row.productName %></h5>
          <h6>&#x20B9;<%= row.minPrice %></h6>
          <p class="card-text"><%= row.overview %></p>
          <a href="#" class="btn btn-primary btn-sm">Add to container</a>
          <button type="button" class="btn my-2 mx-2 btn-success btn-sm">Buy Now</button>
        </div>
      </div>
      <% }) %>
    </div>
    <!-- <%- include('../partials/foot1'); -%> -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
